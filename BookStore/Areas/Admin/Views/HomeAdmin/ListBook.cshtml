

@{
    ViewBag.Title = "ListBook";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<BookStore.Models.Book>

@using BookStore;
@using System;
<h2>Danh Sách sách</h2>


<table class="table">
    <tr>
        <th>
            Tên Sách
        </th>
        <th>
            Giá
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Số lượng có
        </th>
        <th>
            Ngày cập nhật
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Ảnh bìa
        </th>
        <th>
            Tác giả
        </th>
        <th>
            Thể loại
        </th>
        <th>
            Nhà xuất bản
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            @{
                if (item.Decription.Length > 100)
                {
                    <td>
                        @item.Decription.Substring(0, 100) ...
                    </td>
                }
                else
                {
                    <td>  @Html.DisplayFor(modelItem => item.Decription) </td>
                }
            }


            <td>
                @Html.DisplayFor(modelItem => item.NumberOfInventory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <img src="@Url.Content(item.ImagePath)" style="width:30px; height:30px;" alt="images" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { onclick = "return confirm('Bạn có muốn xóa " + item.Name + "?')" })
            </td>
        </tr>
    }

</table>
