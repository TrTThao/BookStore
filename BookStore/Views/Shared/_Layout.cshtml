                            <ul class="nav navbar-nav">

                                <li><a href="/Cart/Index"><i class="fa fa-shopping-cart"></i> Giỏ Hàng</a></li>
                                @{
                                    if (Session[BookStore.Commons.USER.USER_SESSION] == null)
                                    {

                                        <li><a href="/Login/login"><i class="fa fa-lock"></i> Đăng Nhập</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/Account/Index"><i class="fa fa-user"></i> Tài Khoản</a></li>
                                        <li><a href="/Home/Logout"><i class="fa fa-lock"></i> Đăng Xuất</a></li>
                                    }
                                }



                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
