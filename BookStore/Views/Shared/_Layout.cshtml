            <div class="container">
                <div class="row">
                    <div class="col-md-4 clearfix">
                        <div class="logo pull-left">
                            <a href="Home/Index"><img src="@Url.Content("~/images/logo/logo.jpg")" style="width:100px;height:70px;" alt="" /></a>
                        </div>
