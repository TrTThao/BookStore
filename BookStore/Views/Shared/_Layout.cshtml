                            {
                                @*<input type="text" name="Search" placeholder="Tìm Kiếm" />*@
                                @Html.TextBox("Search","",new { @placeholder="Tìm Kiếm"})
                                <button type="submit" class="btn btn-info">Tìm kiếm</button>
